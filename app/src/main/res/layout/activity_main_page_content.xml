<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_page_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaiojun.dimension4.Activity.MainPageActivity"
    tools:showIn="@layout/nav_bar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- Layout to contain cardviews-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!-- First Row, 3 card view item -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:columnCount="2"
            android:rowCount="5"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/task"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/card1"
                >

                <TextView
                    android:text="Task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/schedule"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/card2"
                >

                <TextView
                    android:text="Schedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/reminder"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/card3"
                >

                <TextView
                    android:text="Reminder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/todo"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/card4"
                >

                <TextView
                    android:text="To DO"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/my_learning"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                card_view:cardCornerRadius="4dp"
                >

                <TextView
                    android:text="My Learning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/announcement"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:text="Announcement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/settings"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_column="0"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:text="Settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_column="1"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:text="User Profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>
        </GridLayout>

    </ScrollView>
</RelativeLayout>

